<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:parallax_factor="1.9"
    android:scrollbarSize="5dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/relative_layout_banner"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF"
            >

            <FrameLayout
                android:id="@+id/frame_layout_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:id="@+id/image_view_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/background_login"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/gradient_dark"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:id="@+id/text_view_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    tools:text="Foo Fighters Tour 2016"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="bottom"
                    />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

            </FrameLayout>

            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_event_date_time"
                style="@style/text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="16/10/2016"
                android:textSize="22sp"
                android:alpha="0.65"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/text_view_event_address"
                style="@style/text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                tools:text="Rua dos Ingleses, 243, Interlagos"
                android:textSize="12sp"
                android:alpha="0.65"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/text_view_ticket_price"
                style="@style/text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textSize="44sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                tools:text="R$65"/>

            <Button
                android:id="@+id/button"
                style="@style/DefaultButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:text="COMPRAR INGRESSO"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>
